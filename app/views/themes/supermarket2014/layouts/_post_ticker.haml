
- promoted_posts.each_with_index do |post, index|
  = link_to(post) do
    .post{:class => (index == 0 ? :first : false)}
      .image= image_tag post.postimage.url(:frontsmall)
      - if post.class == Post
        .title= post.subject
      - elsif post.class == Page
        .title= post.title
          
  