%h3= t :funders_and_partners
- fundertypes.each do |ft|
  .funder_type
    .title= ft.name
    - ft.funders.each do |f|
      - if f.url.blank?
        = image_tag f.logo.url(:sidebar), :width => 120
        .name= f.name
      - else
        = link_to f.url do
          = image_tag f.logo.url(:sidebar), :width => 120
          .name= f.name
      