.sidebar
  Logged in as
  %strong= current_user.display_name
  %div= link_to image_tag(current_user.avatar), edit_admin_user_path(current_user)


  = form_tag('/admin/search') do |f|
    = text_field_tag :searchterm
    = submit_tag "search"
  
  %ul.staff_menu
    %li= link_to 'Applications', admin_applications_path
    %li= link_to 'News/blog posts', admin_posts_path
    %li= link_to 'Pages (static)', admin_pages_path
    %li= link_to 'Edit your profile', edit_admin_user_path(current_user)
    - if can? :manage, Menu
      %li= link_to 'Menu configuration', admin_menus_path
    - if can? :manage, User
      %li= link_to 'All users', admin_users_path
    - if can? :manage, Background
      %li= link_to 'Backgrounds', admin_backgrounds_path
    - if can? :manage, Year
      %li= link_to 'Year setup', admin_years_path
    - if can? :manage, Subsite
      %li= link_to 'Master site configuration', admin_subsites_path