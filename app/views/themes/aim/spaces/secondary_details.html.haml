%h3= t "aim.space_additional_details"
= semantic_form_for(@space, :url => wizard_path(step, :space_id => @space.id), :html => {:multipart => true, :id => :space_form}, :method => :put) do |f|
  .eight.columns.alpha
    = f.input :short_description, :input_html => {:required => true}, :label => t("aim.short_description")
    = f.input :decisionmakers_organisation, :label => t("aim.decision_makers_organisation")
    = f.input :decisionmakers_programming, :label => t("aim.decision_makers_programming")
    = f.input :founding_year, :label => t("aim.founding_year"), :input_html => {:required => true}
    = f.input :is_active, :label => t("aim.is_active")
    = f.input :year_of_closing, :label => t("aim.year_of_closing")
    = f.input :exhibitors, :as => :select, :collection => [[t("aim.mostly_members"),'mostly members'], [t("aim.mixed_members"), 'mixed members and invited' ], [t("aim.mostly_invited"), 'Mostly invited' ], [t("aim.no_exhibitions"), 'no exhibitions' ]], :label => t("aim.exhibitors"), :input_html => {:required => true}
    = f.input :organisationtypes, :as => :check_boxes, :label => t("aim.organisation_type_fieldset"), :hint => t("aim.organisation_type_hint")
  

  .eight.columns.omega
    = f.input :activities, :as => :check_boxes, :label => t("aim.activities_fieldset"), :hint => t("aim.activities_hint")
    = f.input :exhibitionspacetype, :as => :select, :label => t("aim.exhibitionspace_type_fieldset")
    - if f.object.logo?
      %li
        %label= t("aim.your_application_image")
        .image= image_tag f.object.logo.url(:sidebar)
      = f.input :logo, :label => t("aim.change_image")
    - else
      = f.input :logo

    = f.input :form_direction, :input_html => {:value => "forward"}, :as => :hidden
  = f.actions do
    = f.action :submit, :label => raw("<i class='fa fa-arrow-circle-left icon-large'></i>") + t(:back), :as => :button,  :button_html => {:class => :previous}
    = f.action :submit, :label => raw("<i class='fa fa-check icon-large'></i>") + t(:finish), :as => :button

- if user_signed_in?
  = content_for :sidebar do
    = render :partial => 'layouts/sidebar'       

:javascript
  $(document).ready(function() {
    $('#space_form').validate();
    $('form button').click(function() {

      $("#space_form_direction").val($(this).attr('class'));

    });
  });
