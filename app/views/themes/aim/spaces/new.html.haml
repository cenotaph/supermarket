.row
  .small-12.columns
    %h3= t "aim.create_a_space"
.row
  .small-12.columns
    %p= t "aim.create_space_blurb"

= semantic_form_for(@space) do |f|
  / = f.input :country, :label => t("supermarket2014.country_of_space")
  .row
    .small-12.columns= f.input :business_name, :as => :autocomplete, :url => autocomplete_space_business_name_spaces_path, :label => t("supermarket2014.name_of_space"), :input_html => {:data => {:no_matches_label => 'Not registered yet!'}}
  .row
    .small-10.columns
      %button.next.fa.fa-arrow-circle-right.icon-large= t :next
  
