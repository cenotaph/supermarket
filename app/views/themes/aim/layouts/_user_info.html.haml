.login_stuff
  - if current_user
    .row
      .small-12.columns
        = t "aim.you_are_logged_in_as"
        = current_user.display_name
        .right
          = button_to destroy_user_session_path, :method => :delete do
            = t :sign_out
            %i.fa.fa-sign-out.fa-1
    .meta
      - if current_user.spaces.empty?
        .row
          .small-12.columns
            %p= t "aim.initiative_not_yet"
            %p= link_to t("aim.submit_your_initiative"), new_space_path
          
    
      - else
        .row
          - current_user.spaces.each do |space|
            .small-4.columns{:class => "small-offset-" + (8 / current_user.spaces.size.to_i).to_s}
              = space.try(:business_name)
              - unless space.logo.blank?
                .sidebar_image= raw image_tag(space.logo.url(:sidebar), :style => "float: left; margin-right: 5px").gsub('production', 'development')
              - if space.approved?
                = button_to initiatives_path(space), :method => :get do
                  = t "aim.view_your_profile"
                  %i.fa.fa-binoculars.fa-1

              = button_to  edit_space_path(space) , :method => :get  do
                = t "aim.edit_your_details"
                %i.fa.fa-edit.fa-1

    
      - if current_user.is_aim_staff?
        = link_to '[Admin setup]', '/admin'
  - else 
    .login_text
      You are not logged in.
    .login_text
      = t "aim.connect_instantly"
      %ul.oauth_choices
        %li.last= t "aim.login_using"
        %li= link_to 'Facebook', '/auth/facebook'
        
        %li= link_to 'Twitter', '/auth/twitter'
        
        %li.last= link_to 'Google', '/auth/google_oauth2'