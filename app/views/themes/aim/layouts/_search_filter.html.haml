.search_dropdown.row
  .small-3.columns
    %form{:action => "/aiming/search", :method => "post"}
      #menu
        .search_title= t :search_by
        %select{:name => :search_filter}
          %option{:value => :name}= t :name
          %option{:value => :activities}= t :activities
          %option{:value => :location}= t :location
  .small-9.columns.alpha
    %input.shadow{:type => :text, :name => :search_term, :value => params[:search_term]}
.row
  .small-12.columns{:style => "display: " + (@nofilters.nil? ? 'inline' : 'none')}
    .filter_toggle          
      %a{:href => '#', :onClick => '$(".filter_container").slideToggle();$("#map").toggleClass("small")'}
        = fa_icon 'bars'
        = t "aim.toggle_filters"
      - unless session[:filter_scope].nil?
        = link_to t("aim.clear_all_filters"), clear_filters_spaces_path